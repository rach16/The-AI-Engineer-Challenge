{
    "version": 2,
    "builds": [
      { 
        "src": "frontend/package.json", 
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
    { 
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "api/minimal_app.py"
      },
      { 
        "src": "/(.*)", 
        "dest": "frontend/$1"
      }
    ]
  } 